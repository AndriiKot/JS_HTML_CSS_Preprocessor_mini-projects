@require "stylus_css/*"

box-sizing-normal()

body 
    background-color color-background
    font-family font-style
    font-size font-size-text
    color color-text
    min-width  min-width
    overflow-x hidden
    height main-height-size

.modal
    position-center(fixed)
    display none
    
.modal-show 
    display flex

.modal-window 
    z-index 1
    border-radius 20px
    border: 1px solid black;
    width: 550px
    box-shadow 0 10px 15px rgba(0,0,0, .4)
    background-color: red

.modal-window__title 
    text-align: center

 
.overlay
        background-color green
        opacity: .4;
        position-center(absolute)
        width 1000vh
        height 1000vh
        z-index: 0;


.btn-show__modal_widow {
    background-color: #98b6c3;
    color: #fff;
    cursor: pointer;
    border: none;
    padding: 8px 16px;
    font-size: 18px;
    margin: 5px;
}

.modal-window__btn-close {
    position: absolute;
    right: 14px;
    top: 14px;
    border: none;
    cursor: pointer;
    background-color: transparent;
    opacity: .5;
}

.modal-window__btn-close:hover{
    opacity: .7;
}

