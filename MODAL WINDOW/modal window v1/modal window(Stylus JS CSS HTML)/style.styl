@require "stylus_css/*"

box-sizing-normal()

body 
    background-color color-background
    font-family font-style
    font-size font-size-text
    color color-text
    min-width  min-width
    overflow-x hidden
    height main-height-size

.modal
    position-center()
    background-color #98b6c3
    display none
    
.modal-show 
    display flex

.modal-window 
    position relative
    z-index 1
    border-radius 20px
    border: 1px solid black;
    width: 550px
    box-shadow 0 10px 15px rgba(0,0,0, .4)
    background-color: red



.modal-window__title 
    text-align: center


.modal .overlay{
    // background-color #000
    // opacity: .4;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
}

.btn-show__modal_widow {
    background-color: #98b6c3;
    color: #fff;
    cursor: pointer;
    border: none;
    padding: 8px 16px;
    font-size: 18px;
    margin: 5px;
}

.modal-window__btn-close {
    position: absolute;
    right: 14px;
    top: 14px;
    border: none;
    cursor: pointer;
    background-color: transparent;
    opacity: .5;
}

.modal-window__btn-close:hover{
    opacity: .7;
}

