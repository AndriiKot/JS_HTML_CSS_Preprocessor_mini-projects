@require "../mixins/mixins.styl"

modal_style()
    .modal
        position-center(fixed)
        display none

    .modal-show 
        display flex

    .modal-window 
        z-index 1
        border-radius 20px
        width 550px
        box-shadow 0 10px 15px rgba(0,0,0, .4)
        background-color #916fde

    .modal-window__title 
        text-align center


